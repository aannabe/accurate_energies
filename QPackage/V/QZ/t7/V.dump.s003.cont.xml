<?xml version="1.0"?>
<simulation>
  <!--
 
Example QMCPACK input file produced by convert4qmc
 
It is recommend to start with only the initial VMC block and adjust
parameters based on the measured energies, variance, and statistics.

-->
  <!--Name and Series number of the project.-->
  <project id="V.dump" series="4"><host>c402-023.stampede2.tacc.utexas.edu</host><date>Thu Feb 14 13:23:38 2019
</date></project>
  <!--Link to the location of the Atomic Coordinates and the location of the Wavefunction.-->
  <include href="V.dump.structure.xml"/>
  <include href="V.dump.wfnoj.xml"/>
  <!--Hamiltonian of the system. Default ECP filenames are assumed.-->
  <hamiltonian name="h0" type="generic" target="e">
    <pairpot name="ElecElec" type="coulomb" source="e" target="e" physical="true"/>
    <pairpot name="IonIon" type="coulomb" source="ion0" target="ion0"/>
    <pairpot name="PseudoPot" type="pseudo" source="ion0" wavefunction="psi0" format="xml">
      <pseudo elementType="V" href="V.qmcpp.xml"/>
    </pairpot>
  </hamiltonian><mcwalkerset fileroot="V.dump.s003" node="-1" nprocs="512" version="3 6" collected="yes"/>
  <!--
 
Example initial VMC to measure initial energy and variance 

-->

   <qmc method="vmc" move="pbyp">
      <parameter name="walkers">    1               </parameter>
      <parameter name="blocks">    200             </parameter>
      <parameter name="subSteps">    30              </parameter>
      <parameter name="timestep">    0.15            </parameter>
      <parameter name="useDrift">    no              </parameter>
      <parameter name="warmupSteps">    200             </parameter>
      <parameter name="samples">    4096            </parameter>
      <estimator name="LocalEnergy" hdf5="yes"/>
   </qmc>
   <qmc method="dmc" move="pbyp">
      <parameter name="walkers">    1               </parameter>
      <parameter name="blocks">    40              </parameter>
      <parameter name="steps">    20              </parameter>
      <parameter name="timestep">    0.02            </parameter>
      <parameter name="nonlocalmoves">    yes             </parameter>
      <parameter name="warmupSteps">    200             </parameter>
      <parameter name="targetwalkers">    4096            </parameter>
      <estimator name="LocalEnergy" hdf5="yes"/>
   </qmc>
   <qmc method="dmc" move="pbyp">
      <parameter name="walkers">    1               </parameter>
      <parameter name="blocks">    80             </parameter>
      <parameter name="steps">    20              </parameter>
      <parameter name="timestep">    0.01            </parameter>
      <parameter name="nonlocalmoves">    yes             </parameter>
      <parameter name="warmupSteps">    25              </parameter>
      <parameter name="targetwalkers">    4096            </parameter>
      <estimator name="LocalEnergy" hdf5="yes"/>
   </qmc>
   <qmc method="dmc" move="pbyp">
      <parameter name="walkers">    1               </parameter>
      <parameter name="blocks">    160             </parameter>
      <parameter name="steps">    20              </parameter>
      <parameter name="timestep">    0.005           </parameter>
      <parameter name="nonlocalmoves">    yes             </parameter>
      <parameter name="warmupSteps">    10              </parameter>
      <parameter name="targetwalkers">    4096            </parameter>
      <estimator name="LocalEnergy" hdf5="yes"/>
   </qmc>



</simulation>
