<?xml version="1.0"?>
<simulation>
   <project id="optJ12" series="0">
      <application name="qmcpack" role="molecu" class="serial" version="1.0"/>
   </project>
   <qmcsystem>
      <simulationcell>
         <parameter name="bconds">
            n n n
         </parameter>
      </simulationcell>
      <particleset name="e" random="yes" randomsrc="ion0">
         <group name="u" size="10" mass="1.0">
            <parameter name="charge"              >    -1                    </parameter>
            <parameter name="mass"                >    1.0                   </parameter>
         </group>
         <group name="d" size="6" mass="1.0">
            <parameter name="charge"              >    -1                    </parameter>
            <parameter name="mass"                >    1.0                   </parameter>
         </group>
      </particleset>
      <particleset name="ion0">
         <group name="Fe" size="1" mass="101799.207432">
            <parameter name="charge"              >    16                    </parameter>
            <parameter name="valence"             >    16                    </parameter>
            <parameter name="atomicnumber"        >    26                    </parameter>
            <parameter name="mass"                >    101799.207432            </parameter>
            <attrib name="position" datatype="posArray" condition="0">
                     0.00000000        0.00000000        0.00000000
            </attrib>
         </group>
      </particleset>
      <wavefunction name="psi0" target="e">
         <sposet_builder type="bspline" href="MISSING.h5" tilematrix="1 0 0 0 1 0 0 0 1" twistnum="None" source="ion0" version="0.10" meshfactor="1.0" precision="float" truncate="no">
            <sposet type="bspline" name="spo_u" size="10" spindataset="0"/>
            <sposet type="bspline" name="spo_d" size="6" spindataset="1"/>
         </sposet_builder>
         <determinantset>
            <slaterdeterminant>
               <determinant id="updet" group="u" sposet="spo_u" size="10"/>
               <determinant id="downdet" group="d" sposet="spo_d" size="6"/>
            </slaterdeterminant>
         </determinantset>
         <jastrow type="One-Body" name="J1" function="bspline" source="ion0" print="yes">
            <correlation elementType="Fe" size="8" rcut="5" cusp="0.0">
               <coefficients id="eFe" type="Array">                  
0 0 0 0 0 0 0 0
               </coefficients>
            </correlation>
         </jastrow>
         <jastrow type="Two-Body" name="J2" function="bspline" print="yes">
            <correlation speciesA="u" speciesB="u" size="8" rcut="10">
               <coefficients id="uu" type="Array">                  
0 0 0 0 0 0 0 0
               </coefficients>
            </correlation>
            <correlation speciesA="u" speciesB="d" size="8" rcut="10">
               <coefficients id="ud" type="Array">                  
0 0 0 0 0 0 0 0
               </coefficients>
            </correlation>
         </jastrow>
      </wavefunction>
      <hamiltonian name="h0" type="generic" target="e">
         <pairpot type="coulomb" name="ElecElec" source="e" target="e"/>
         <pairpot type="coulomb" name="IonIon" source="ion0" target="ion0"/>
         <pairpot type="pseudo" name="PseudoPot" source="ion0" wavefunction="psi0" format="xml">
            <pseudo elementType="Fe" href="Fe.ccECP.xml"/>
         </pairpot>
      </hamiltonian>
   </qmcsystem>
   <loop max="2">
      <qmc method="linear" move="pbyp" checkpoint="-1">
         <cost name="energy"              >    0.0                </cost>
         <cost name="unreweightedvariance">    1.0                </cost>
         <cost name="reweightedvariance"  >    0.0                </cost>
         <parameter name="blocks"              >    50                 </parameter>
         <parameter name="timestep"            >    0.5                </parameter>
         <parameter name="samples"             >    1000000            </parameter>
         <parameter name="minwalkers"          >    0.3                </parameter>
         <parameter name="useDrift"            >    no                 </parameter>
         <parameter name="MinMethod"           >    OneShiftOnly         </parameter>
         <parameter name="beta"                >    0.0                </parameter>
         <parameter name="exp0"                >    -15                </parameter>
         <parameter name="bigchange"           >    20.0               </parameter>
         <parameter name="alloweddifference"   >    1e-05              </parameter>
         <parameter name="stepsize"            >    0.2                </parameter>
         <parameter name="stabilizerscale"     >    2.0                </parameter>
         <parameter name="nstabilizers"        >    3                  </parameter>
         <parameter name="nonlocalpp"          >    yes                </parameter>
         <parameter name="useBuffer"           >    yes                </parameter>
         <parameter name="steps"               >    1                  </parameter>
         <parameter name="subSteps"            >    20                 </parameter>
         <estimator name="LocalEnergy" hdf5="yes"/>
      </qmc>
   </loop>
   <loop max="4">
      <qmc method="linear" move="pbyp" checkpoint="-1">
         <cost name="energy"              >    0.95               </cost>
         <cost name="unreweightedvariance">    0.0                </cost>
         <cost name="reweightedvariance"  >    0.05               </cost>
         <parameter name="blocks"              >    50                 </parameter>
         <parameter name="timestep"            >    0.5                </parameter>
         <parameter name="samples"             >    4000000            </parameter>
         <parameter name="minwalkers"          >    0.3                </parameter>
         <parameter name="useDrift"            >    no                 </parameter>
         <parameter name="MinMethod"           >    OneShiftOnly         </parameter>
         <parameter name="beta"                >    0.0                </parameter>
         <parameter name="exp0"                >    -15                </parameter>
         <parameter name="bigchange"           >    20.0               </parameter>
         <parameter name="alloweddifference"   >    1e-05              </parameter>
         <parameter name="stepsize"            >    0.2                </parameter>
         <parameter name="stabilizerscale"     >    2.0                </parameter>
         <parameter name="nstabilizers"        >    3                  </parameter>
         <parameter name="nonlocalpp"          >    yes                </parameter>
         <parameter name="useBuffer"           >    yes                </parameter>
         <parameter name="steps"               >    1                  </parameter>
         <parameter name="subSteps"            >    20                 </parameter>
         <estimator name="LocalEnergy" hdf5="yes"/>
      </qmc>
   </loop>
   <loop max="0">
      <qmc method="linear" move="pbyp" checkpoint="-1">
         <cost name="energy"              >    0.95               </cost>
         <cost name="unreweightedvariance">    0.0                </cost>
         <cost name="reweightedvariance"  >    0.05               </cost>
         <parameter name="blocks"              >    50                 </parameter>
         <parameter name="timestep"            >    0.5                </parameter>
         <parameter name="samples"             >    16000000           </parameter>
         <parameter name="minwalkers"          >    0.3                </parameter>
         <parameter name="useDrift"            >    no                 </parameter>
         <parameter name="MinMethod"           >    OneShiftOnly         </parameter>
         <parameter name="beta"                >    0.0                </parameter>
         <parameter name="exp0"                >    -15                </parameter>
         <parameter name="bigchange"           >    20.0               </parameter>
         <parameter name="alloweddifference"   >    1e-05              </parameter>
         <parameter name="stepsize"            >    0.2                </parameter>
         <parameter name="stabilizerscale"     >    2.0                </parameter>
         <parameter name="nstabilizers"        >    3                  </parameter>
         <parameter name="nonlocalpp"          >    yes                </parameter>
         <parameter name="useBuffer"           >    yes                </parameter>
         <parameter name="steps"               >    1                  </parameter>
         <parameter name="subSteps"            >    20                 </parameter>
         <estimator name="LocalEnergy" hdf5="yes"/>
      </qmc>
   </loop>
</simulation>
