<?xml version="1.0"?>
<simulation>
  <!--
 
Example QMCPACK input file produced by convert4qmc
 
It is recommend to start with only the initial VMC block and adjust
parameters based on the measured energies, variance, and statistics.

-->
  <!--Name and Series number of the project.-->
  <project id="Co.log" series="0"/>
  <!--Link to the location of the Atomic Coordinates and the location of the Wavefunction.-->
  <include href="Co.log.structure.xml"/>
  <include href="Co.log.wfj.xml"/>
  <!--Hamiltonian of the system. Default ECP filenames are assumed.-->
  <hamiltonian name="h0" type="generic" target="e">
    <pairpot name="ElecElec" type="coulomb" source="e" target="e" physical="true"/>
    <pairpot name="IonIon" type="coulomb" source="ion0" target="ion0"/>
    <pairpot name="PseudoPot" type="pseudo" source="ion0" wavefunction="psi0" format="xml">
      <pseudo elementType="Co" href="Co.qmcpp.xml"/>
    </pairpot>
  </hamiltonian>
 
<!-- Intital VMC -->
  <qmc method="vmc" move="pbyp" checkpoint="-1">
    <estimator name="LocalEnergy" hdf5="no"/>
    <parameter name="walkers">1</parameter>
    <parameter name="samplesperthread">1</parameter>
    <parameter name="stepsbetweensamples">10</parameter>
    <parameter name="substeps">5</parameter>
    <parameter name="warmupSteps">100</parameter>
    <parameter name="blocks">200</parameter>
    <parameter name="timestep">0.15</parameter>
    <parameter name="usedrift">no</parameter>
  </qmc>

  <loop max="5">
     <qmc method="linear" move="pbyp" checkpoint="-1">
        <cost name="energy"              >    0.0                </cost>
        <cost name="unreweightedvariance">    1.0                </cost>
        <cost name="reweightedvariance"  >    0.0                </cost>
        <parameter name="blocks"              >    400                 </parameter>
        <parameter name="timestep"            >    0.15               </parameter>
        <parameter name="samples"             >    256000              </parameter>
        <parameter name="minwalkers"          >    0.0001             </parameter>
        <parameter name="useDrift"            >    no                 </parameter>
        <parameter name="MinMethod"           >    OneShiftOnly         </parameter>
        <parameter name="nonlocalpp"          >    yes                </parameter>
        <parameter name="useBuffer"           >    yes                </parameter>
        <parameter name="subSteps"            >    5                  </parameter>
        <estimator name="LocalEnergy" hdf5="yes"/>
     </qmc>
  </loop>

  <loop max="5">
     <qmc method="linear" move="pbyp" checkpoint="-1">
        <cost name="energy"              >    0.0                </cost>
        <cost name="unreweightedvariance">    1.0                </cost>
        <cost name="reweightedvariance"  >    0.0                </cost>
        <parameter name="blocks"              >    400                </parameter>
        <parameter name="timestep"            >    0.15               </parameter>
        <parameter name="samples"             >    256000              </parameter>
        <parameter name="minwalkers"          >    0.5                </parameter>
        <parameter name="useDrift"            >    no                 </parameter>
        <parameter name="MinMethod"           >    OneShiftOnly         </parameter>
        <parameter name="nonlocalpp"          >    yes                </parameter>
        <parameter name="useBuffer"           >    yes                </parameter>
        <parameter name="subSteps"            >    5                  </parameter>
        <estimator name="LocalEnergy" hdf5="yes"/>
     </qmc>
  </loop>
  <loop max="10">
     <qmc method="linear" move="pbyp" checkpoint="-1">
        <cost name="energy"              >    0.95               </cost>
        <cost name="unreweightedvariance">    0.0                </cost>
        <cost name="reweightedvariance"  >    0.05               </cost>
        <parameter name="blocks"              >    400                </parameter>
        <parameter name="timestep"            >    0.15               </parameter>
        <parameter name="samples"             >    512000             </parameter>
        <parameter name="minwalkers"          >    0.5                </parameter>
        <parameter name="useDrift"            >    no                 </parameter>
        <parameter name="MinMethod"           >    OneShiftOnly         </parameter>
        <parameter name="nonlocalpp"          >    yes                </parameter>
        <parameter name="useBuffer"           >    yes                </parameter>
        <parameter name="subSteps"            >    5                  </parameter>
        <estimator name="LocalEnergy" hdf5="yes"/>
     </qmc>
  </loop>

